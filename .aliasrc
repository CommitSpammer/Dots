#!/bin/sh

command -v nvim >/dev/null && alias vim="nvim" vimdiff="nvim -d"

 alias \
         cp="cp -r -iv" \
	 mv="mv -iv" \
	 rm="rm -r -iv" \
	 mkd="mkdir -pv" \
	 ls="ls -l --color" \
	 la="ls -la --color" \
	 lh="ls -d .* --color" \
 	 ccat="highlight --out-format=ansi" \
	 f="$FILE" \
	 e="$EDITOR" \
	 v="$EDITOR" \
	 ka="killall" \
	 g="git" \
	 gc="git commit -m" \
 	 gcnm="git commit -a --allow-empty-message -m ''" \
	 gp="git push"
	 po="doas poweroff" \
	 es="emerge -s" \
	 ed="doas emerge" \
